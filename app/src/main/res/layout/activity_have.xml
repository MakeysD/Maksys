<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg1"
    tools:context="com.example.duan.chao2.DCZ_activity.HaveActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@color/bg_title1"/>
    <RelativeLayout
        style="@style/Title"
        android:background="@color/bg_title1">
        <include
            android:id="@+id/back"
            layout="@layout/layout_back3" />
        <TextView
            android:id="@+id/tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/tishi29"
            android:textColor="@color/text_title1"
            android:textSize="@dimen/title" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/xian"
            android:background="@color/xian1"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="@dimen/left"
            android:paddingRight="@dimen/right">
            <RelativeLayout
                android:layout_width="310dp"
                android:layout_height="310dp"
                android:background="@drawable/b_g3">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:background="@drawable/diannao_lan"
                    android:layout_centerInParent="true">
                    <pl.droidsonroids.gif.GifImageView
                        android:id="@+id/gif"
                        android:layout_width="45dp"
                        android:layout_height="25dp"
                        android:layout_marginTop="25dp"
                        android:src="@mipmap/state1"/>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="60dp"
                    android:orientation="vertical"
                    android:layout_marginBottom="80dp"
                    android:layout_alignParentBottom="true"
                    android:gravity="center_horizontal">
                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/tishi30"
                        android:textColor="#7ce1ff"
                        android:textSize="16sp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="@string/tishi31"
                        android:textColor="#506f93"
                        android:visibility="gone"
                        android:textSize="@dimen/text02" />
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/ok"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:background="@mipmap/tongyi"
                    android:gravity="center"
                    android:paddingBottom="12dp"
                    android:paddingTop="12dp"
                    android:text="@string/tishi32"
                    android:textColor="@color/white"
                    android:textSize="@dimen/title" />

                <TextView
                    android:id="@+id/no"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/jujue"
                    android:layout_marginLeft="@dimen/left"
                    android:gravity="center"
                    android:paddingBottom="12dp"
                    android:paddingTop="12dp"
                    android:text="@string/tishi33"
                    android:textColor="@color/white"
                    android:textSize="@dimen/title" />
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/anima"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible"
            android:clickable="true"
            android:background="@color/bg1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center_horizontal"
                android:orientation="vertical">
                <RelativeLayout
                    android:id="@+id/yuan"
                    android:layout_width="310dp"
                    android:layout_height="310dp"
                    android:background="@drawable/yuan_lv">
                    <LinearLayout
                        android:id="@+id/diannao"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:background="@drawable/diannao_lv"
                        android:layout_centerInParent="true">

                        <pl.droidsonroids.gif.GifImageView
                            android:id="@+id/gif_ok"
                            android:layout_width="33dp"
                            android:layout_height="33dp"
                            android:layout_marginTop="15dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:layout_centerInParent="true">
                        <pl.droidsonroids.gif.GifImageView
                            android:layout_width="33dp"
                            android:layout_height="33dp"
                            android:visibility="invisible"
                            android:layout_marginTop="15dp"/>
                        <TextView
                            android:id="@+id/type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:layout_marginTop="70dp"
                            android:text="@string/tishi138"/>
                    </LinearLayout>
                </RelativeLayout>
                <View
                    android:layout_width="wrap_content"
                    android:layout_height="72dp">
                </View>
            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>
</LinearLayout>
