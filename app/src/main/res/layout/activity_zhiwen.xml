<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg1"
    android:orientation="vertical"
    tools:context="com.example.duan.chao.DCZ_activity.ZhiwenActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:background="@color/bg_title1"/>
            <RelativeLayout
                style="@style/Title"
                android:background="@color/bg_title1">
                <include
                    android:id="@+id/back"
                    layout="@layout/layout_back"
                    android:visibility="gone"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="@string/title21"
                    android:textColor="@color/text_title1"
                    android:textSize="@dimen/title" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/xian"
                    android:background="@color/xian1"
                    android:layout_marginLeft="@dimen/xian_left"
                    android:layout_marginRight="@dimen/xian_right"
                    android:layout_alignParentBottom="true"/>
            </RelativeLayout>
            <com.facebook.drawee.view.SimpleDraweeView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginTop="50dp"
                fresco:placeholderImage="@mipmap/tou"
                fresco:placeholderImageScaleType="fitCenter"
                app:roundAsCircle="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text01"
                android:textColor="@color/white"
                android:layout_marginTop="30dp"
                android:textStyle="bold"
                android:layout_marginBottom="40dp"
                android:text="857999639@qq.com"/>
            <LinearLayout
                android:id="@+id/zhiwen_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">
                <com.facebook.drawee.view.SimpleDraweeView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    fresco:placeholderImage="@mipmap/zhiwen"
                    fresco:placeholderImageScaleType="fitCenter"
                    app:roundAsCircle="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text01"
                    android:textColor="@color/white"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="30dp"
                    android:text="@string/tishi64"/>
            </LinearLayout>

        </LinearLayout>
        <TextView
            android:id="@+id/change"
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="@string/tishi59"
            android:textColor="#3c3c3c"
            android:layout_marginLeft="50px"
            android:layout_marginBottom="80px"/>
        <TextView
            android:id="@+id/wangji"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:text="@string/tishi60"
            android:textColor="#3c3c3c"
            android:layout_marginRight="50px"
            android:layout_marginBottom="80px"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/zhiwen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#50000000"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/banjiao1"
                android:gravity="center_horizontal"
                android:paddingTop="17dp"
                android:paddingBottom="20dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:src="@mipmap/zhiwen" />

                <TextView
                    android:id="@+id/result"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#a2a2a2"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:textSize="@dimen/text01"
                    android:layout_marginTop="16dp"
                    android:text="安全锁的ID"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text02"
                    android:textSize="@dimen/text02"
                    android:layout_marginTop="5dp"
                    android:text="通过Home键验证已有手机指纹"/>
            </LinearLayout>
            <TextView
                android:id="@+id/cancle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/banjiao2"
                android:gravity="center"
                android:padding="15dp"
                android:textSize="@dimen/text01"
                android:textColor="#f9f9f9"
                android:text="取消"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
