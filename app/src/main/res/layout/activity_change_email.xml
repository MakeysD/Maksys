<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg1"
    tools:context="com.example.duan.chao.DCZ_activity.ChangeEmailActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:gravity="center_vertical"
            android:visibility="gone"
            android:layout_marginBottom="@dimen/di"
            android:orientation="horizontal">
            <View
                android:layout_width="50dp"
                android:layout_height="1dp"
                android:background="#303745">
            </View>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#303745"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="@string/tishi140"/>
            <View
                android:layout_width="50dp"
                android:layout_height="1dp"
                android:background="#303745">
            </View>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:background="@color/bg_title1"/>
            <RelativeLayout
                style="@style/Title"
                android:background="@color/bg_title1">
                <include
                    android:id="@+id/back"
                    layout="@layout/layout_back" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="@string/tishi90"
                    android:textColor="@color/text_title1"
                    android:textSize="@dimen/title" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/xian"
                    android:background="@color/xian1"
                    android:layout_marginLeft="@dimen/xian_left"
                    android:layout_marginRight="@dimen/xian_right"
                    android:layout_alignParentBottom="true"/>
            </RelativeLayout>
            <TextView
                android:id="@+id/tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="30dp"
                android:textSize="@dimen/text01"
                android:text="请补全原绑定安全邮箱：857999639@qq.com"/>
            <TextView
                android:id="@+id/xian1"
                android:layout_width="match_parent"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_height="@dimen/xian"
                android:layout_marginTop="20dp"
                android:background="@color/xian1" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/iv3"
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="10dp"
                    android:src="@mipmap/email2" />

                <EditText
                    android:id="@+id/et"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="@string/tishi91"
                    android:inputType="number"
                    android:singleLine="true"
                    android:textColor="@color/text08"
                    android:textColorHint="@color/text04"
                    android:textCursorDrawable="@null"
                    android:textSize="@dimen/text01"
                    android:textStyle="bold" />

            </LinearLayout>
            <TextView
                android:id="@+id/xian2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/xian"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="30dp"
                android:layout_marginTop="10dp"
                android:background="@color/xian1" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/left"
                android:layout_marginRight="@dimen/right">

                <TextView
                    android:id="@+id/button_hui"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/yuanjiaohui"
                    android:gravity="center"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:text="@string/button"
                    android:textColor="@color/text02"
                    android:textSize="@dimen/title" />

                <TextView
                    android:id="@+id/button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/yuanjiaolan"
                    android:gravity="center"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:text="@string/button"
                    android:textColor="@color/white"
                    android:visibility="gone"
                    android:textSize="@dimen/title"/>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>
