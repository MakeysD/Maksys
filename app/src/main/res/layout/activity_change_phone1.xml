<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/bg1"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@color/bg_title1"/>
    <RelativeLayout
        style="@style/Title"
        android:background="@color/bg_title1">
        <include
            android:id="@+id/back"
            layout="@layout/layout_back" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/title5"
            android:textColor="@color/text_title1"
            android:textSize="@dimen/title" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/xian"
            android:background="@color/xian1"
            android:layout_marginLeft="@dimen/xian_left"
            android:layout_marginRight="@dimen/xian_right"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:visibility="gone"
            android:gravity="center_vertical"
            android:layout_marginBottom="@dimen/di"
            android:orientation="horizontal">
            <View
                android:layout_width="50dp"
                android:layout_height="1dp"
                android:background="#303745">
            </View>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#303745"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="@string/tishi140"/>
            <View
                android:layout_width="50dp"
                android:layout_height="1dp"
                android:background="#303745">
            </View>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/left"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:textSize="@dimen/text01"
                android:textColor="@color/white" />
            <TextView
                android:id="@+id/xian1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/xian"
                android:layout_marginLeft="@dimen/left"
                android:layout_marginRight="@dimen/right"
                android:background="@color/xian1" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/left"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp">
                <ImageView
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:layout_marginLeft="5dp"
                    android:src="@mipmap/login04"/>
                <EditText
                    android:id="@+id/et_code"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:hint="@string/tishi10"
                    android:textSize="@dimen/text01"
                    android:singleLine="true"
                    android:maxLength="8"
                    android:layout_marginLeft="10dp"
                    android:textColorHint="@color/text06"
                    android:background="@null"
                    android:textCursorDrawable="@null"
                    android:textColor="@color/white"/>
                <TextView
                    android:id="@+id/code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:paddingTop="7dp"
                    android:paddingBottom="7dp"
                    android:background="@drawable/yuanjiaolan2"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text02"
                    android:gravity="center"
                    android:text="@string/tishi11"/>
            </LinearLayout>
            <TextView
                android:id="@+id/xian2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/xian"
                android:layout_marginLeft="@dimen/left"
                android:layout_marginRight="@dimen/right"
                android:layout_marginTop="10dp"
                android:background="@color/xian2" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/left"
                android:paddingRight="@dimen/right">
                <TextView
                    android:id="@+id/button_hui"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/tishi12"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/yuanjiaohui"
                    android:gravity="center"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:textSize="@dimen/title"
                    android:textColor="@color/text02"/>
                <TextView
                    android:id="@+id/button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:text="@string/tishi12"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/yuanjiaolan2"
                    android:gravity="center"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:textSize="@dimen/title"
                    android:textColor="@color/white"/>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>
