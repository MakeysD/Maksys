<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg1"
    android:orientation="vertical"
    tools:context="com.example.duan.chao.DCZ_activity.StartLockActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:background="@color/bg_title1"/>
            <RelativeLayout
                style="@style/Title"
                android:background="@color/bg_title1">
                <include
                    android:id="@+id/back"
                    layout="@layout/layout_back"
                    android:visibility="gone"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="欢迎回来"
                    android:textColor="@color/text_title1"
                    android:textSize="@dimen/title" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/xian"
                    android:background="@color/xian1"
                    android:layout_marginLeft="@dimen/xian_left"
                    android:layout_marginRight="@dimen/xian_right"
                    android:layout_alignParentBottom="true"/>
            </RelativeLayout>
            <com.facebook.drawee.view.SimpleDraweeView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginTop="50dp"
                fresco:placeholderImage="@mipmap/tou"
                fresco:placeholderImageScaleType="fitCenter"
                app:roundAsCircle="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text01"
                android:textColor="@color/white"
                android:layout_marginTop="30dp"
                android:textStyle="bold"
                android:layout_marginBottom="40dp"
                android:text="857999639@qq.com"/>
            <LinearLayout
                android:id="@+id/zhiwen_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_centerInParent="true">
                    <com.example.duan.chao.DCZ_lockdemo.CustomLockView
                        android:id="@+id/cl"
                        android:layout_width="230dp"
                        android:layout_height="230dp"
                        android:layout_marginBottom="70dp"/>

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
        <TextView
            android:id="@+id/change"
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="切换登录方式"
            android:textColor="#3c3c3c"
            android:layout_marginLeft="50px"
            android:layout_marginBottom="80px"/>
        <TextView
            android:id="@+id/wangji"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:text="忘记手势密码"
            android:textColor="#3c3c3c"
            android:layout_marginRight="50px"
            android:layout_marginBottom="80px"/>
    </RelativeLayout>
</LinearLayout>
