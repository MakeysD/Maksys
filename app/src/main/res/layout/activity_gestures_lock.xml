<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg1"
    tools:context="com.example.duan.chao2.DCZ_activity.GesturesLockActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@color/bg_title1"/>
    <RelativeLayout
        style="@style/Title"
        android:background="@color/bg_title1">
        <include
            android:id="@+id/back"
            layout="@layout/layout_back" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/title10"
            android:textColor="@color/text_title1"
            android:textSize="@dimen/title" />

        <TextView
            android:id="@+id/she"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:visibility="gone"
            android:paddingLeft="10dp"
            android:paddingRight="15dp"
            android:textColor="@color/white"
            android:layout_alignParentRight="true"
            android:text="@string/tishi160"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/xian"
            android:background="@color/xian1"
            android:layout_marginLeft="@dimen/xian_left"
            android:layout_marginRight="@dimen/xian_right"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:text="@string/tishi25"
            android:textColor="@color/text02"
            android:textSize="@dimen/text01"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/iva"
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:layout_marginRight="5dp"
                            android:background="@mipmap/unselected" />

                        <ImageView
                            android:id="@+id/ivb"
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:layout_marginRight="5dp"
                            android:background="@mipmap/unselected" />

                        <ImageView
                            android:id="@+id/ivc"
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:background="@mipmap/unselected" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/ivd"
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:layout_marginRight="5dp"
                            android:background="@mipmap/unselected" />

                        <ImageView
                            android:id="@+id/ive"
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:layout_marginRight="5dp"
                            android:background="@mipmap/unselected" />

                        <ImageView
                            android:id="@+id/ivf"
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:background="@mipmap/unselected" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/ivg"
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:layout_marginRight="5dp"
                            android:background="@mipmap/unselected" />

                        <ImageView
                            android:id="@+id/ivh"
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:layout_marginRight="5dp"
                            android:background="@mipmap/unselected" />

                        <ImageView
                            android:id="@+id/ivi"
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:background="@mipmap/unselected" />

                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:id="@+id/tvWarn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="@dimen/left"
                    android:layout_marginRight="@dimen/right"
                    android:text="@string/tishi26a"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text01" />

                <com.example.duan.chao2.DCZ_lockdemo.CustomLockView
                    android:id="@+id/cl"
                    android:layout_width="250dp"
                    android:layout_height="250dp"
                    android:layout_marginTop="40dp" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
