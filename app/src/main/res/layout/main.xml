<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="fill_parent"
    android:layout_width="fill_parent"
    android:clipToPadding="true">
  <ScrollView
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">
    <LinearLayout
      android:orientation="vertical"
      android:layout_height="fill_parent"
      android:layout_width="fill_parent"
      android:clipToPadding="true">
      <pl.droidsonroids.gif.GifImageView
          android:id="@+id/gifview"
          android:layout_width="200dp"
          android:layout_gravity="center_horizontal"
          android:layout_marginTop="20dp"
          android:layout_height="200dp"
          android:scaleType="centerCrop"/>
      <LinearLayout android:id="@+id/content_no_accounts"
          android:orientation="vertical"
          android:layout_width="fill_parent"
          android:layout_height="wrap_content"
          android:layout_marginLeft="10sp"
          android:layout_marginRight="10sp"
          android:layout_marginTop="10sp">
        <Button android:id="@+id/add_account_button"
          android:text="@string/button_add_account"
          android:layout_marginTop="10sp"
          android:layout_width="fill_parent"
          android:layout_height="wrap_content" />
      </LinearLayout>
      <com.example.duan.chao.DCZ_authenticator.CountdownIndicator
          android:id="@+id/countdown_icon"
          android:layout_width="32dip"
          android:layout_height="32dip"
          android:layout_marginTop="10dp"
          android:layout_gravity="center_horizontal"
          style="?attr/accountListWithVerificationCodesRowCountdownIndicator" />
     <!-- <com.example.duan.chao.DCZ_util.CircleTextProgressbar
          android:id="@+id/countdown_icon"
          android:layout_width="32dip"
          android:layout_height="32dip"
          android:layout_gravity="center_horizontal"/>-->
      <TextView
          android:id="@+id/pin_value"
          android:layout_width="match_parent"
          android:gravity="center_horizontal"
          android:textSize="55dp"
          android:textStyle="bold"
          android:textColor="#333333"
          android:layout_height="100dp"/>
    </LinearLayout>
  </ScrollView>
 <!-- <ListView
      android:id="@+id/user_list"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      style="?attr/accountListWithVerificationCodes"/>-->
</LinearLayout>
